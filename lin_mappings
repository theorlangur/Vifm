" Interaction with system clipboard
if $WAYLAND_DISPLAY != ''
    if executable('wl-copy')
        " Yank current directory path into primary and selection clipboards
        nnoremap yp :!echo -n %d | wl-copy %i &&
                    \ echo -n %d | wl-copy -p %i<cr>:echo expand('%"d') "is yanked to clipboard"<cr>
        " Yank current file path into into primary and selection clipboards
        nnoremap yf :!echo -n %c:p | wl-copy %i &&
                    \ echo -n %c:p | wl-copy -p %i<cr>:echo expand('%"c:p') "is yanked to clipboard"<cr>
        " yank current filename without path into the clipboard
        nnoremap yn :!echo -n %c | wl-copy %i &&
                    \ echo -n %c | wl-copy -p %i<cr>:echo expand('%"c') "is yanked to clipboard"<cr>
    endif
elseif $DISPLAY != ''
    if executable('xclip')
        " Yank current directory path into the clipboard
        nnoremap yp :!echo %d | xclip %i<cr>
        " Yank current file path into the clipboard
        nnoremap yf :!echo %c:p | xclip %i<cr>
    elseif executable('xsel')
        " Yank current directory path into primary and selection clipboards
        nnoremap yp :!echo -n %d | xsel --input --primary %i &&
                    \ echo -n %d | xsel --clipboard --input %i<cr>
        " Yank current file path into into primary and selection clipboards
        nnoremap yf :!echo -n %c:p | xsel --input --primary %i &&
                    \ echo -n %c:p | xsel --clipboard --input %i<cr>
    endif
endif

filextype *
	\ {Default open}
	\ xdg-open %f &,

"FZF config
command! FZFfind : set noquickview
                \| let $FZF_PICK = term('find 2> /dev/null | fzf --height 10 2>/dev/tty')
                \| if $FZF_PICK != ''
                \|     execute 'goto' fnameescape($FZF_PICK)
                \| endif

command! unpack tar -xf %c
"Pack command for windows using powershell's Compress-Archive
command! pack tar -zcf %c.tar.gz %c 
command! vsc code .&
command! uz unzip %c -d %c:r
command! ut tar -xzf %c --one-top-level

"trigger file search with fzf
nnoremap go :FZFfind<cr>
"nvim edit
nnoremap i :edit<cr>
"launch vscode
nnoremap <space>c :vsc<cr>
nnoremap ,f :find<space>
nnoremap ,R :!sudo vifm %d %D<cr>
nnoremap S :!EDITOR=/opt/nvim-linux-x86_64/bin/nvim sudo -e %f<cr>

"Custom common linux marks

mark h ~/
mark d ~/Documents
mark D ~/Downloads
mark a ~/myapps
mark c ~/myapps/cpp

"this will provide local marks and mappings
source $VIFM/local_lin_mappings
